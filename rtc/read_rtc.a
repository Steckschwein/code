*=$1000
!src "../bios/defs.h.a"
!src "../bios/via.h.a"
!src "../bios/bios.h.a"

main
    	sei

	jsr lcdclear

	jsr rtc_enable
	lda #$8f
	jsr spi_rw_byte
	lda #$00
	jsr spi_rw_byte
	jsr rtc_disable

	jsr rtc_enable
    lda #$00
   	jsr spi_rw_byte

    jsr spi_r_byte
	jsr lcdhex

	lda #' '
	jsr lcdprint
	jsr spi_r_byte
	jsr lcdhex

	lda #' '
	jsr lcdprint

    	jsr spi_r_byte
	jsr lcdhex

	jsr rtc_disable

	rts
rtc_disable
	pha

	; Deselect any SPI devices
	lda #%11111110
	sta via1portb
	
	pla
	rts

rtc_enable
	pha
	; Select SPI SS for keyboard
	lda #%01110110
	; and via1portb
	sta via1portb

	pla
	rts

; text	!text "Hallo!", $00
time_mask !text "00:00:00", $00
date_mask !text "00.00.00", $00

