!src <defs.h.a>
!src <via.h.a>
!src <spi.a>

!src "../bios/vdp.a"

.init_io
    +SetVector .chrout, CSWL
    +SetVector .getkey, KSWL
    bra init_vdp
   
.chrout
    pha
    jsr vdp_chrout
    pla
    rts 
	
.getkey
	phx
	lda #%01111010
	sta via1portb
	jsr .spi_r_byte
	ldx #%11111110
	stx via1portb
	plx
    cmp #$00; restore zero flag
    rts 
