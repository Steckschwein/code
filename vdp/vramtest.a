*=$1000
!source <bios.h.a>
!source <defs.h.a>

    jmp   main
   
!source <t99xx.lib.a>
!source <defs.h.a>

adr_h_w=.ptr1
adr_h_r=.ptr2

main:		
	
	stz	crs_x
	lda	#08
	sta	crs_y

	+PrintString	memtest_msg
	
	lda #.WRITE_ADDRESS + $21
	sta adr_h_w
	ldx #$00			+ $21
	stx	adr_h_r
	ldy #$00
	jsr mem_ca
--	bit	a_vreg
	bpl	--
-	tya
	phy
	ldy	  adr_h_w
	jsr	  vdp_sreg
	ply
	lda   pattern, x
	sta	  a_vram
	tya
	phy
	nop
	nop
	ldy	  adr_h_r
	jsr	  vdp_sreg
	ply
	nop
	nop
	lda	  a_vram	
	cmp   pattern, x
	bne   +
	inx
	cpx   #$0a
	bne   -
	ldx   #$00
	iny
	bne   --
	inc   adr_h_w	; next 256 byte page
	inc   adr_h_r
    jsr   mem_ca
	lda	  adr_h_r
	cmp	  #.WRITE_ADDRESS
	bne   --
	+PrintString	memtest_msg_ok
-	bra	-
+	pha            	;save erroneous pattern
	jsr   mem_ca
	lda   #' '
	jsr   chrout
	pla   
	jsr   hexout
	+PrintString	memtest_msg_err
-	bra	-

mem_ca:	; output value
	lda	#05
	sta crs_x
	phy            ;save memory adress low byte
	lda adr_h_r
	jsr	hexout
	pla
	jsr hexout
	rts
   
memtest_msg	!text "Mem:$", $00
memtest_msg_ok	!text " OK", $00
memtest_msg_err	!text " FAILED", $00
.crlf					!byte $0a, $0d, $00
pattern  !byte $f0,$0f,$96,$69,$a9,$9a,$00,$ff
