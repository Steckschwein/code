*=$1000
	jmp .main
	
!src <gfx.lib.a>
!src <t99xx.lib.a>

.main
	sei
	
	;disable vdp
	jsr	vdp_display_off
	
	;clear bitmap space
	lda	#Cyan<<4|Black
	jsr	vdp_mode_gfx2_blank
	
	!for i,0,10{
		+setPixel 10+i, 10+i, Cyan
	}
	!for i,0,10{
		+setPixel 100-i, 100+i, Cyan
	}
	
	;enable gfx2
	jsr	vdp_mode_gfx2

-	bra	-
	
	