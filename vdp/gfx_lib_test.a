*=$1000
	jmp .main
	
!src <gfx.lib.a>
!src <t99xx.lib.a>

.main
	sei
	
	jsr	vdp_display_off
	
	lda	#Cyan<<4|Black
	sta .adrl
	lda #<ADDRESS_GFX2_COLOR
	ldy #.WRITE_ADDRESS + >ADDRESS_GFX2_COLOR
	ldx	#$18
	jsr	vdp_fill
	
	lda	#$00
	sta .adrl
	lda #<ADDRESS_GFX2_PATTERN
	ldy #.WRITE_ADDRESS + >ADDRESS_GFX2_PATTERN
	ldx	#$18
	jsr	vdp_fill
	
	!for i,0,10{
		+setPixel 10+i, 10+i, Cyan
	}
	!for i,0,10{
		+setPixel 100-i, 100+i, Cyan
	}
	
	jsr	vdp_mode_gfx2

-	bra	-
	
	