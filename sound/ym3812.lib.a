;
!source "ym3812.h.a"

snd_sreg:
	sty   a_sound_rs
	+snd_nops
	sta   a_sound_rw
	rts

snd_reset:
	lda	#0
	tay
	tax
-	sty	a_sound_rs				; select YM register
	nop
	nop								
	sta	a_sound_rw				; write to selected YM register now
	iny	
	bne	-
	rts

;
;	return - C (carry) flag set - if an opl2 compatible chip is available
;
snd_detect:
	+snd_write 4, $60
	+snd_write 4, $80
	ldy	a_sound
	+snd_write 2, $ff
	+snd_write 4, $21
;  for(i=0;i<80;i++)			// wait for adlib
;    INP(adp);
;  stat2 = INP(adp);
	ldx	a_sound
	+snd_write 4, $60
	+snd_write 4, $80
	tya
	and	#$e0
	beq	+
	txa
	and	#$e0
	cmp	#$c0
+	rts