;----------------------------------------------------------------------------------------------	
; "init" opl2 by writing zeros into all registers
;----------------------------------------------------------------------------------------------
.init_opl2
	ldx #$F5 ; until reg 245
-	stx opl_stat

	!for .i,1,7 {
		nop
	} 

	stz opl_data

	ldy #46
--	
	dey
	bne --

	dex
	bne -
	
	rts
