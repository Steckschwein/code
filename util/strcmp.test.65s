    sta a2+2
    sta a3+2
    sta a4+2
    lda #>test_in
    sta a5+2
    
    jsr test
	
	rts
	
test
	
	ldx #0
	ldy #0
	
l1:
	lda test_dir_tab,x
	sta dirptr
	lda test_dir_tab+1,x
	sta dirptr+1
		
	phx
	phy
	jsr match	; check <name>.<ext> against 11 byte dir entry <name> <ext>
	ply
	plx		
	lda	#0
	rol			;result in carry to bit 0	
a5	cmp	test_input, y
	bne	test_failed	
	
	jsr	_test_ok
next:	
	iny
	inx
	inx
	cpx	#test_dir_tab_e-test_dir_tab
	bne	l1	
	rts
test_failed
	;failed with 'y'
	jsr	_test_failed
	bra	next
		
