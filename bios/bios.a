.hexout
	pha
	phx

	tax
	lsr
	lsr
	lsr
	lsr				
	and     #%00001111      ;mask lsd for hex print
	ora     #"0"            ;add "0"
	cmp     #"9"+1          ;is it a decimal digit?
	bcc     +	            ;yes! output it
	adc     #6              ;add offset for letter a-f
+	jsr		.chrout

	txa 
	and     #%00001111      ;mask lsd for hex print
	ora     #"0"            ;add "0"
	cmp     #"9"+1          ;is it a decimal digit?
	bcc     +	            ;yes! output it
	adc     #6              ;add offset for letter a-f
+	jsr		.chrout

	plx
	pla
	rts

			
vdp_clear_vram:
	lda #$00
	ldy	$00+$40
	lda #$00
	sta .adrl
	ldx	#$40
	jmp vdp_fill	;clear vram

;----------------------------------------------------------------------------------------------
; clear VDP Screen
;----------------------------------------------------------------------------------------------
vdp_clear_screen:
	lda	#$20
	sta	.adrl
   lda   #$00
   ldy   #$18+$40
   ldx	 #$03
	jmp 	vdp_fill

;----------------------------------------------------------------------------------------------
; Load Charset into VDP VRAM
;----------------------------------------------------------------------------------------------
vdp_load_charset:
   +SetVector charset, .adrl
   lda   #$00
   ldy   #$00+$40
   ldx	 #$08
   jmp 	 vdp_memcpy

;----------------------------------------------------------------------------------------------
; Set Text Color
;----------------------------------------------------------------------------------------------
vdp_color:
   lda   #$00
   ldy   #$60
   jsr   vdp_sreg
   ldx   #$00
   ldy   #TEXT_COLOR<<4|Transparent
-  +nops VRAM_WAIT
   sty   a_vram
   inx
   cpx   #$20
   bne   -
   rts


;----------------------------------------------------------------------------------------------
; Write to VDP VRAM
;----------------------------------------------------------------------------------------------
vdp_write:
   lda   #$00
   ldy   #$18+$40
   jsr   vdp_sreg
   ldy   #$00
-  lda   (msgptr),y
   beq   +
   +nops VRAM_WAIT
   sta   a_vram
   iny
   bne   -
+  rts

;----------------------------------------------------------------------------------------------
; Display Cursor
;----------------------------------------------------------------------------------------------
vdp_cursor:
   lda   #$20
   ldy   #$54
   jsr   vdp_sreg
   lda   crs_x
   and   #$10
   beq   +
   lda   #231
   jmp   ++
+  lda   #' '
++ sta   a_vram
   inc   crs_x
   rts
;----------------------------------------------------------------------------------------------



