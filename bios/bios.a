;----------------------------------------------------------------------------------------------
; Memcheck routine to be copied to ZP
;----------------------------------------------------------------------------------------------
.num_patterns = $01
.pattern  !byte $aa,$55

.memcheck_start
!pseudopc .target {
      
-     ldx #.num_patterns  ; 2 cycles
--    lda .pattern,x      ; 4 cycles
	  sta (ram_end_l),y   ; 6 cycles
	  cmp (ram_end_l),y   ; 5 cycles
      bne +				  ; 2 cycles, 3 if taken
      
      dex  				  ; 2 cycles
      bne --			  ; 2 cycles, 3 if taken

	  iny  				  ; 2 cycles		
	  bne -				  ; 2 cycles, 3 if taken

      ; Stop at $e000 to prevent overwriting BIOS Code when ROMOFF
      ldx ram_end_h		  ; 3 cycles
      inx				  ; 2 cycles
      stx ram_end_h		  ; 3 cycles
      cpx #$e0			  ; 2 cycles
      
      bne - 			  ; 2 cycles, 3 if taken

+	  
	  sty ram_end_l		  ; 3 cycles
	  					  ; 42 cycles
      jmp .back_from_memcheck
}
.memcheck_end

