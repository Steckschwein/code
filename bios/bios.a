;---------------------------------------------------------------------
; enable keyboard controller on SPI bus
;---------------------------------------------------------------------
.kbd_enable
	pha
	; Select SPI SS for keyboard
	lda #%01111010
	; and via1portb
	sta via1portb

	lda #$7f
	and kbd_flg
	sta kbd_flg

	pla
	rts

;---------------------------------------------------------------------
; disable keyboard controller on SPI bus
;---------------------------------------------------------------------
.kbd_disable
	pha

	; Deselect any SPI devices
	lda #%11111110
	sta via1portb
	
	pla
	rts

;---------------------------------------------------------------------
; get key from keyboard, wait if $00
;---------------------------------------------------------------------
.kbd_chrin
	phx
	phy

-	jsr .kbd_enable	
	jsr .spi_r_byte
	jsr .kbd_disable
	beq -
	
	ply
	plx
	rts


