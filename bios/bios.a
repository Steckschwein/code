.read_nvram
	+save
	; select RTC
	lda #%01110110
	sta via1portb

	lda #$20
	jsr .spi_rw_byte

	ldx #$00
-		
	phx
	jsr .spi_r_byte
	plx
	sta .nvram,x
	inx
	cpx #96
	bne -

	; deselect all SPI devices
	lda #%01111110
	sta via1portb


	lda #$42 
	cmp .nvram + param_sig
	bne .nvram_invalid_sig					; Wrong signature? stick to the default

