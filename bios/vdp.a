.COLS=32

!set bios_stuff=1 	;bios stuff only
!src <t99xx.lib.a>

init_vdp
	jsr	vdp_display_off			;display off
	jsr vdp_mode_gfx1_sprites_off
	jsr vdp_mode_gfx1_blank
	
	stz	crs_x
	stz	crs_y

	+SetVector	charset, .adrl
	lda	#$00
	ldy	#.WRITE_ADDRESS+$00
	ldx	#$08					;load charset
	jsr	vdp_memcpy
	lda	#Cyan<<4|Black			;enable gfx 1
	jsr	vdp_mode_gfx1
	jsr	vdp_irq_off				;switch gfx int off
	rts