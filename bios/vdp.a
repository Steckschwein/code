.COLS=32

!set bios_stuff=1 	;bios stuff only
!src <t99xx.lib.a>

init_vdp
	jsr	vdp_display_off			;display off
	jsr vdp_mode_gfx1_sprites_off
	jsr vdp_mode_gfx1_blank
	
	stz	crs_x
	stz	crs_y
	
	+SetVector	charset, .adrl
	lda	#<ADDRESS_GFX1_PATTERN
	ldy	#.WRITE_ADDRESS + >ADDRESS_GFX1_PATTERN

	ldx	#$08					;load charset
	jsr	vdp_memcpy
	; jsr	vdp_mode_gfx1_sprites_off	;clean sprite attribute table
	lda	#Cyan<<4|Black			;enable gfx 1


	jsr	vdp_mode_gfx1
	
	jsr	vdp_irq_off				;switch gfx int off
	
	rts