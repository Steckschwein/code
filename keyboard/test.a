!src "../bios/defs.h.a"
!src "../bios/bios.h.a"

buffer = $0280 ; kbd buffer in reserved ram within io space. :-)
ptr  = tmp7

	lda #$00
	sta ptr


	lda #dev_lcd
	sta chn_out
  	jsr lcdclear

	; Select SPI SS for keyboard
	; lda #%11111010
	; sta via1portb


; TODO: rausfinden warum hier nur datenm√ºll kommt

