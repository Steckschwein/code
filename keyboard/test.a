;  	beq - 
;  	jsr lcdprint

;  	jmp -


	sei

	; Set IRQ Vector
	lda #<kbd
	sta irqvec

	lda #>kbd
	sta irqvec+1


	lda #<count
	sta via1t1cl            ; set low byte of count
	lda #>count
	sta via1t1ch            ; set high byte of count

	lda #%11000000
	sta via1ier             ; enable VIA1 T1 interrupts

	lda #%01000000
	sta via1acr             ; T1 continuous, PB7 disabled

	cli
-
	jsr getkey
	
	cmp #$0c
	beq +

	jsr chrout
	jmp -
+	jsr lcdclear
	jmp -

getkey
	phx
-	ldx ptr  
	beq -		; buffer empty, wait for key
	dex
	lda buffer, x
	stx ptr

	plx
	rts

kbd
 	pha
 	phx
 
 	; Interrupt from VIA1 timer?
 	lda #%11000000
 	bit via1ifr	
 	beq + ; no?

	; acknowledje interrupt 	
 	bit via1t1cl

 	
	ldx ptr
	cpx #$0f
	; ptr <= $0f?
	bcc ++
	beq ++

	bra +
++

	; ; Select SPI SS for keyboard
	lda #%11111010
	sta via1portb


	lda #$ff
 	jsr spi_rw_byte

 	; jsr spi_r_byte
	beq ++
 	cmp #$ff
 	beq ++

 	sta buffer, x
 	inc ptr

++
	; ; Deselect any SPI devices
	ldx #%11111110
	stx via1portb

	
+	pla
	plx
	rti


