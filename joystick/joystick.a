*= $1000

PORT_SEL_1		= 1<<6
PORT_SEL_2		= 1<<7
JOY_UP			= 1<<0
JOY_DOWN			= 1<<1
JOY_LEFT			= 1<<2
JOY_RIGHT		= 1<<3
JOY_FIRE			= 1<<4

jmp main 
!src "../bios/defs.h.a"
!src "../bios/bios.h.a"
!src "../bios/via.h.a"

main 
	jsr	init_via
	
	jsr 	lcdclear
-	
	ldx	#$00
	ldy	#$01
	jsr	lcdxy

	lda	#PORT_SEL_1			;port 1
	sta	via1porta
	+SetVector msg_j1, 		msgptr
	jsr 	lcdstring
	lda	via1porta
	jsr	lcdhex

	lda	#PORT_SEL_2		;port 2
	sta	via1porta
	+SetVector msg_j2, 		msgptr
	jsr 	lcdstring
	lda	via1porta
	jsr	lcdhex
	jmp -

init_via:	
	;via port a
	lda #$00
	sta via1ier             ; disable VIA1 T1 interrupts
	lda #%00000000 			; set latch
	sta via1acr
	lda #%11001100 			; set level
	sta via1pcr
	lda #%11000000 			; set PA6,7 to output (port select), PA1-6 to input (directions)
	sta via1ddra
	rts
	
msg_j1:
	!text "j1:",0
msg_j2:
	!text " j2:",0